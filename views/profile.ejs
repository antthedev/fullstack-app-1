<!doctype html>
<html>
<head>
    <title>Book Club</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Book Club Group</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <img src="" alt="">
          <h3>Weekly BookClub</h3>
          <h4>This weeks book</h4>
          <img src="https://m.media-amazon.com/images/I/51v1aAlA9xL._AC_SY780_.jpg" alt="">
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><i class="<%=messages[i].stars >= 1 ? 'fa-solid': 'fa-regular' %>  fa-star star1"  aria-hidden="true"></i></span>
              <span><i class="<%=messages[i].stars >= 2 ? 'fa-solid': 'fa-regular' %>  fa-star star2"  aria-hidden="true"></i></span>
              <span><i class=" <%=messages[i].stars >= 3 ? 'fa-solid': 'fa-regular' %>  fa-star star3" aria-hidden="true"></i></span>
              <span><i class="<%=messages[i].stars >= 4 ? 'fa-solid': 'fa-regular' %> fa-star star4" aria-hidden="true"></i></span>
              <span><i class="<%=messages[i].stars >= 5 ? 'fa-solid': 'fa-regular' %> fa-star star5" aria-hidden="true"></i></span>
              <span><i class="<%=messages[i].stars >= 5 ? 'fa-trash': 'fa-solid' %> fa-trash star6" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
          

          <h2>Write and rate the book</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            
            <input type="text" placeholder="Review" name="msg">
            <button type="submit">Submit</button>
            
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
